<Window x:Class="TicTacToeStarter.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeStarter"
        mc:Ignorable="d"
        Title="Startup" Height="450" Width="800">
    <Grid>
        <Label Content="Choose X or O to continue (X usually plays first)" HorizontalAlignment="Left" Margin="82,44,0,0" VerticalAlignment="Top"/>
        <Image x:Name="imgStartX" HorizontalAlignment="Left" Source="Images/tic-tac-toe_x.png" Height="100" Margin="95,111,0,0" VerticalAlignment="Top" Width="100" MouseDown="ChooseStart"/>
        <Image x:Name="imgStartO" HorizontalAlignment="Left" Source="Images/tic-tac-toe_o.png" Height="100" Margin="244,111,0,0" VerticalAlignment="Top" Width="100" MouseDown="ChooseStart"/>
        <Button Content="change O to X " HorizontalAlignment="center" Margin="0,151,0,0" VerticalAlignment="top" Click="Button_Click"/>

    </Grid>
</Window>
